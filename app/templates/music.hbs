<div {{bind-attr class=":music mixcloudFrameSrc:mixcloud_player--is-open"}}>
{{#if data}}
<div class="clearfix">
{{#each data}}
    <a {{bind-attr href=url}} {{bind-attr id=url}} {{action playCloudcast key}} class="artwork" target="_blank">
        <img class="block_image" {{bind-attr src=pictures.large}}>
        <div class="artwork__overlay">
            <span class="artwork__title">{{name}}</span>
        </div>
        <i class="icon-play artwork__play"></i>
    </a>
{{/each}}
</div>
{{else}}
    <p>Sorry, no music found.</p>
{{/if}}
{{#if mixcloudFrameSrc}}
<div class="mixcloud_player"><iframe width="100%" height="60" {{bind-attr src=mixcloudFrameSrc}} src="" frameborder="0"></iframe></div>
{{/if}}
</div>
